{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "watch -d 0 -x run --clear",
			"problemMatcher": ["$rustc"],
			"group": "build",
			"label": "rust: cargo watch",
			"dependsOn": "clear screen"
		},
		{
			"type": "shell",
			"command": "cls",
			"label": "clear screen"
		}
	]
}
